                            .cart-item-single__inner    
                                .cart-item-single__qty-wrap 
                                    .cart-item-single__qty
                                        .number-stepper.number-stepper--small
                                            input.number-stepper__input(type="number" min="1" max="99" value="1" name="cart-item-single-qty")
                                            .number-stepper__btn-up
                                                span.number-stepper__icon-up
                                            .number-stepper__btn-down
                                                span.number-stepper__icon-down

                                .cart-item-single__price-wrap
                                    span.cart-item-single__price-old 14 290 Kč
                                    p.cart-item-single__price 8 489 Kč
                                .cart-item-single__sum-wrap
                                    p.cart-item-single__sum #[span 8 489] Kč
                                .cart-item-single__delete-wrap
                                    a.cart-item-single__delete(href="#")
                                        span.cross-icon.cart-item-single__delete-icon

                    .cart-shipping-coupon-wrap
                        .cart-free-shipping
                            .cart-free-shipping__img
                                span.delivery-icon.white
                            p.cart-free-shipping__text Při nákupu nad 1 500 Kč doprava zdarma

                        .cart-coupon
                            label.cart-coupon__text(for="cart_coupon") Vlastním slevový poukaz
                            input.form-control.cart-coupon__input(type="text" name="cart_coupon" id="cart_coupon") 
                        
                    .cart-price-overview
                        .cart-price-overview__wrap
                            p.cart-price-overview__text-small Celková cena bez DPH:
                            h5.cart-price-overview__price-small #[span.cart-price-overview__number 16 989] Kč
                        .cart-price-overview__wrap
                            p.cart-price-overview__text Celková cena:
                            h3.cart-price-overview__price #[span.cart-price-overview__number 16 989] Kč


                    .cart-shipping-option
                        h3.cart-shipping-option__main-title Zvolte způsob dopravy a platby

                        .cart-shipping-option__wrap
                            img(src=URLbase+"img/gp.gif" alt="Geis Point")
                            h3.cart-shipping-option__title Geis Point
                            .form-check
                                label.form-check__label
                                    input.form-check__input(type="radio" name="cart_form_shipping" id="geis-1" required)
                                    | Geis Point výdejní místo platba převodem předem
                                    span.form-check__price 59 Kč 
                                    span.form-check__box.radio

                            .form-check
